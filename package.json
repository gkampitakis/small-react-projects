{
  "homepage": "https://gkampitakis.github.io/small-react-projects",
  "name": "small-react-projects",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/**/*.{tsx,ts}",
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-app-rewired build && rm -rf build/**/*.snap",
    "build:map": "CI=false react-app-rewired build && rm -rf build/**/*.snap",
    "test": "bundlesize && react-scripts test",
    "predeploy": "npm run build",
    "deploy": "node deploy.js",
    "analyze": "npm run build:map && source-map-explorer build/static/js/*.chunk.js"
  },
  "dependencies": {
    "blurhash": "^1.1.4",
    "github-markdown-css": "^4.0.0",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-blurhash": "^0.1.3",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-markdown": "6.0.3",
    "react-router-dom": "^5.3.0",
    "typescript": "4.4.3",
    "react-scripts": "4.0.3",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.30.0",
    "bundlesize": "^0.18.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.2.3",
    "jest-fetch-mock": "^3.0.3",
    "react-app-rewired": "^2.1.8",
    "react-test-renderer": "^17.0.2",
    "source-map-explorer": "^2.5.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/projects/**/*.{tsx,ts}",
      "src/hooks/tests/**/*.{tsx,ts}",
      "src/components/tests/**/*.{tsx,ts}",
      "!src/App.tsx",
      "!src/Router.tsx",
      "!src/**/index.tsx",
      "!<rootDir>/node_modules/"
    ]
  },
  "bundlesize": [
    {
      "path": "build/static/js/*.chunk.js",
      "maxSize": "50kb"
    }
  ]
}
