{
  "homepage": "https://gkampitakis.github.io/small-react-projects",
  "name": "small-react-projects",
  "version": "0.6.1",
  "license": "MIT",
  "dependencies": {
    "blurhash": "^1.1.3",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-blurhash": "^0.1.3",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.3.0",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "bundlesize": "^0.18.0",
    "eslint": "^7.14.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "jest-fetch-mock": "^3.0.3",
    "react-app-rewired": "^2.1.7",
    "react-test-renderer": "^17.0.1",
    "source-map-explorer": "^2.5.1"
  },
  "scripts": {
    "lint": "eslint src/**/*.{tsx,ts}",
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-app-rewired build && rm -rf build/**/*.snap",
    "build:map": "react-app-rewired build && rm -rf build/**/*.snap",
    "test": "bundlesize && react-scripts test",
    "predeploy": "npm run build",
    "deploy": "node deploy.js",
    "analyze": "npm run build:map && source-map-explorer build/static/js/*.chunk.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/projects/**/*.{tsx,ts}",
      "src/hooks/tests/**/*.{tsx,ts}",
      "src/components/tests/**/*.{tsx,ts}",
      "!src/App.tsx",
      "!src/Router.tsx",
      "!src/**/index.tsx",
      "!<rootDir>/node_modules/"
    ]
  },
  "bundlesize": [
    {
      "path": "build/static/js/*.chunk.js",
      "maxSize": "50kb"
    }
  ]
}
